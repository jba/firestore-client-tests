# A key with the special ServerTimestamp sentinel is removed from the data being
# written. Instead it appears in a separate Transform action. Note that in these
# tests, the string "ServerTimestamp" should be replaced with the special
# ServerTimestamp value.

description: "a ServerTimestamp field becomes a transform"
create: <
  doc_ref_path: "projects/projectID/databases/(default)/documents/C/d"
  json_data: "{\"a\": 1, \"b\": \"ServerTimestamp\"}"
  request: <
    database: "projects/projectID/databases/(default)"
    writes: <
      update: <
        name: "projects/projectID/databases/(default)/documents/C/d"
        fields: <
          key: "a"
          value: <
            integer_value: 1
          >
        >
      >
      current_document: <
        exists: false
      >
    >
    writes: <
      transform: <
        document: "projects/projectID/databases/(default)/documents/C/d"
        field_transforms: <
          field_path: "b"
          set_to_server_value: REQUEST_TIME
        >
      >
    >
  >
>
